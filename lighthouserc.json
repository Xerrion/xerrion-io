{
  "ci": {
    "collect": {
      "settings": {
        "chromeFlags": "--no-sandbox --disable-gpu"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9, "aggregationMethod": "median-run" }],
        "categories:accessibility": ["error", { "minScore": 0.95, "aggregationMethod": "pessimistic" }],
        "categories:best-practices": ["warn", { "minScore": 0.9, "aggregationMethod": "median-run" }],
        "categories:seo": ["error", { "minScore": 0.9, "aggregationMethod": "pessimistic" }]
      }
    }
  }
}
